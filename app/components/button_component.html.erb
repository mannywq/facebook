<turbo-frame id="<%= "user-#{@user.id}" %>">
  <%= button_to(
    content,
    @options[:path],
    {
      method: :post,
      remote: true,
      class: "rounded-lg font-bold text-white p-2 bg-blue-900 text-sm",
      params: {
        user: {
          friend: @user,
          status: "pending"
        }
      }
    }
  ) %>
</turbo-frame>
