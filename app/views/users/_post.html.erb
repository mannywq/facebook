<div class="flex flex-col post-wrapper max-w-xl p-2 mt-6 mx-auto">
  <div class="user flex w-full gap-4">
    <div class="avatar">
      <% if user.avatar.attached? %>
        <%= image_tag user.avatar, class: "h-8 w-8 rounded-full m-0" %>
      <% else %>
        No image found
      <% end %>
    </div>
    <div class="name">
      <p class="font-semibold m-0"><%= link_to user.name, user_path(user.id), class: "no-underline" %></p>
      <p class="text-gray-500 text-sm m-0"><%= time_ago_in_words(post.created_at) %>
        ago</p>
    </div>
  </div>

  <div class="content">
    <p class="text-gray-800 mb-4"><%= post.body %></p>
  </div>
  <hr class="m-0">

  <%= render "shared/comments", user: user, post: post %>

</div>
