<div
  class="
    flex
    flex-col
    post-wrapper
    max-w-xl
    p-4
    mb-6
    mx-auto
    shadow-md
    rounded-lg
    bg-white
  "
  data-controller="toggle"
>
  <div class="user flex w-full gap-4">
    <div class="avatar">
      <% if post.user.avatar.attached? %>
        <%= image_tag post.user.avatar.representation(:thumb).processed.url,
        class: "h-8 w-8 rounded-full self-center m-0" %>
      <% else %>
        No image found
      <% end %>
    </div>
    <div class="name">
      <p class="font-semibold text-sm m-0"><%= link_to post.user.name, user_path(post.user.id), class: "no-underline" %></p>
      <p class="text-gray-500 text-sm m-0"><%= time_ago_in_words(post.created_at) %>
        ago</p>
    </div>
  </div>

  <div class="content">

    <p class="text-gray-800 my-4"><%= post.body %></p>
    <% if post.images.attached? %>
      <div
        class="<%= class_names('grid', {'grid-cols-2': post.images.length > 1}, 'gap-4', 'mb-6') %>"
      >
        <% post.images.each do |image| %>
          <div class="image">
            <%= link_to(
              image_tag(
                image.representation(:feed).processed.url,
                class: "m-0 mb-2 rounded-lg"
              ),
              post_path(post, image: image.id),
              data: {
                turbo_frame: "modal"
              }
            ) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div
    class="
      flex
      py-2
      gap-4
      like-wrapper
      items-end
      border-t
      border-b
      border-1
      border-gray-200
    "
  >
    <%= render "shared/like_button", post: post %>
    <%= render "shared/comment_component", post: post %>
  </div>

  <div class="comments-wrapper">
    <% if post.comments.any? %>
      <button
        class="
          mt-2
          p-2
          text-sm
          font-semibold
          text-blue-500
          hover:bg-blue-100
          rounded-full
        "
        data-action="toggle#comments"
      >Load
        <%= pluralize post.comments.count, "comment" %></button>
    <% end %>
    <%= render "shared/comments", user: post.user, post: post %>
  </div>

</div>
