<%= turbo_frame_tag "#{dom_id(post, :comments)}" do %>

  <% if post.images.any? %>
    <%= link_to "Comment",
    post_path(post, image: post.images[0]),
    data: {
      turbo_frame: "modal"
    },
    class: "text-gray-800 text-sm font-semibold" %>
  <% else %>
    <%= link_to "Comment",
    post_path(post),
    data: {
      turbo_frame: "modal"
    },
    class: "text-gray-800 text-sm font-semibold" %>

  <% end %>

<% end %>
