<div class="w-full">
  <% if notice.present? %>
    <p
      class="
        py-2
        px-3
        bg-green-50
        mb-5
        text-green-500
        font-medium
        inline-block
        w-screen
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <h3>New friend requests</h3>

  <div id="notifications" class="min-w-full">
    <%= render partial: "friends/user_card", collection: @invites %>
  </div>
</div>
