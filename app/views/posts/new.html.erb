<%= turbo_frame_tag "modal", target: '_top' do %>
  <div
    data-action="click@window->modal#hideModal"
    data-modal-target="modal"
    class="fixed bg-black bg-opacity-50 top-0 left-0 right-0 bottom-0"
  >
    <div
      class="
        relative
        top-20
        w-[400px]
        z-[2]
        mx-auto
        p-4
        bg-white
        rounded-lg
        shadow-md
      "
    >
      <%= form_with model: @post, html: { class: 'block flex flex-col gap-4'}, data: { turbo: false } do |f| %>

        <%= f.text_area :body,
                    placeholder: "Share your thoughts...",
                    class:
                      "shadow mt-3 w-full text-gray-800 appearance-none focus:outline-none focus:border-blue-100 rounded border-2 border-gray-200 w-80" %>
        <%= f.submit "Post",
                 class:
                   "btn h-12 ml-auto text-lg px-3 py-2 mr-3 bg-blue-600 rounded-lg text-white font-medium cursor-pointer" %>
      <% end %>
    </div>
  </div>
<% end %>
