<%= turbo_frame_tag "modal", target: '_top' do %>
  <div
    data-controller="modal" data-action="click@window->modal#close"
    data-modal-target="modal"
    class="fixed bg-black bg-opacity-50 top-0 left-0 right-0 bottom-0"
  >
    <div
      class="
        relative
        top-20
        w-[400px]
        max-h-[600px]
        overflow-scroll
        z-[2]
        mx-auto
        p-4
        bg-white
        rounded-lg
        shadow-md
      "
    >
      <%= form_with model: @post, multipart: true, html: { class: 'overflow-y-scroll block flex flex-col gap-4'}, data: { controller: 'upload', turbo: false } do |f| %>

        <%= f.text_area :body,
                    placeholder: "Share your thoughts...", rows: 4,
                    class:
                      "shadow mt-3 w-full resize-none text-gray-800 appearance-none focus:outline-none focus:border-blue-100 rounded border-2 border-gray-200 w-80" %>

                    <hr class="my-2">

                    <div class="flex gap-2 justify-between">
                    <%= f.label :images do %>
<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" class="cursor-pointer" viewBox="0 0 24 24" fill="none" stroke="#338bfe" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-image"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>

<%= f.file_field :images, multiple: true, data: { action: 'change->upload#change' }, accept: "image/png, image/jpeg", class: 'hidden' %>

        <% end %>
        <%= f.submit "Post",
                 class:
                   "btn p-2 bg-blue-600 w-[100px] rounded-lg text-white font-medium cursor-pointer" %>
                 </div>
      <% end %>
    </div>
  </div>
<% end %>
