<%= turbo_frame_tag "friend-request", class: 'text-center' do %>

  <% if !current_user.friends_with_status(:active).include? user %>
    <%= render ButtonComponent.new(
              user: user,
              frame: user.id,
              path: friends_path,
              type: "primary",
              data: {
                turbo: true
              },
              method: :post,
              params: {
                user: {
                  friend: user.id,
                }
              }
            ) do %>
      Add friend
    <% end %>
  <% else %>

    <%= render ButtonComponent.new(
              user: user,
              frame: user.id,
              path: friend_path(user),
              type: 'secondary',
              data: {
                turbo_method: :delete,
                turbo_confirm: 'Are you sure?'
              },
              method: :delete,
              params: {
                user: {
                  friend: user.id
                }
              }
            ) do %>
      Unfriend
    <% end %>
  <% end %>
<% end %>
